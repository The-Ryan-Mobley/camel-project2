<div class="content">
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            {{!-- Search Bar --}}
            <div class="row">
                <div class=" col m4 s8 offset-m8 offset-s2">
                    <div class="row valign-wrapper">
                        <div class=" col s11 landing-search input-field">
                            <input type="text" id="autocomplete-input-small"
                                class="autocomplete white-text brown darken-1">
                            <label class="light-txt-input center" for="autocomplete-input">Search</label>
                        </div>
                        <button id="re-search" class="search-btn col m1 s2 waves-effect waves-light brown center btn"><i
                                class="material-icons right">search</i></button>
                    </div>
                </div>
            </div>
            {{!-- Search Results --}}
            {{#each data}}
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="col s12 m8">
                            <h3 class="header">{{dataValues.beer_name}}</h3>
                            <div class="card horizontal">
                                <div class="card-image">
                                    <img class="search-result-img" src="/img/beer-pint-hazy-light.png">
                                </div>
                                <div class="card-stacked">
                                    <div class="card-content">
                                        <p>Style: {{dataValues.beer_type}}</p>
                                        <p> Description: {{dataValues.beer_description}}</p>
                                        <p>Average Rating: {{dataValues.avg_rating}}</p>
                                    </div>
                                    <div class="card-action">
                                        <a href="/beer/{{dataValues.id}}">Read Reviews</a>
                                        <a href="#">Write a Review</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- Side-info --}}
                        <div class="col hide-in-small s1 m4">stuff</div>
                    </div>
                </div>


            </div>
            {{/each}}
            {{#unless data}}
            <h3>No Results Found</h3>
            {{/unless}}
        </div>
    </div>


    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="../../bin/materialize.js"></script>
    <script src="js/init.js"></script>



    <div class="sidenav-overlay"></div>
    <div class="drag-target"></div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/results.js"></script>